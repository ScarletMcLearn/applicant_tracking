<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/vendor/css/bootstrap.min.css">
    <link rel="stylesheet" href="/vendor/css/style.css">
    <link rel="stylesheet" href="/vendor/css/glyphicons.css">
    <link rel="stylesheet" href="/css/UserAdministration.css" crossorigin="anonymous">
    <title>User Administration</title>
</head>

<body>
<% include include/RecHeader %>
    <!-- /* CONTAINER START */ -->
    <div class="main" id="main">
        <div class="container" id="container">

            <div class="title jumbotron" id="jumbotron">
                <!-- used title to reduce extra padding on top of  CREATE NEW CANDIDATE -->
                <div class="title jumbotron p-2 bg-secondary">
                    
        <!--  <a href="/recruiters/all" >Show all articles</a>-->
        <!--<button onclick="location.href='/CreateApplicant';"></button>-->
    <
        
                    <h3 class="title display-5 py-2 text-white">Add New Recruiter</h3>
                </div>
                <input type="text" class="b form-control mt-2 textbox" placeholder="Name" id="name">
                <input type="email" class="b form-control mt-2 textbox" placeholder="Email" id="email">
                <input type="password" class="b form-control mt-2 textbox" placeholder="Password" id="password">

                <button id="submit">Submit</button>
                <br/>
                <div id="error"></div>
                        </div>
                    </div>
                   
                </div>

    <script src="/vendor/js/jquery-3.3.1.js"></script>
    <script type="/vendor/text/javascript" src="js/jquery-3.1.1.min.js"></script>
    <script src="/vendor/js/script.js"></script>
    <script src="/vendor/js/bootstrap.min.js"></script>
    <script>
        function openNav() {
            document.getElementById("sidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "0";
            document.body.style.backgroundColor = "rgba(0,0,0,0.3)";
            document.getElementById("container").style.backgroundColor = "#B2B2B2";
        }
        function closeNav() {
            document.getElementById("sidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.body.style.backgroundColor = "#F0F1F6";
            document.getElementById("container").style.backgroundColor = "#F0F1F6";
        }
        $(document.getElementById("main")).click( function() {
          closeNav();
        });
       
      var newUser = {name:"", email:"", password:"", type:"Recruiter"};
        $('#submit').click(function(){
            newUser.name=$('#name').val();
            newUser.email=$('#email').val();
            newUser.password=$('#password').val();
              $.ajax({
                method: 'POST',
                url: "/auth/signup",
                data: newUser
              }).done(function(response){
                console.log(response);
                alert("New Recruiter Created!\nRecruiter Name:" + response.name + "\nEmail:" + response.email + "\nPassword:" + response.password);
                window.location.replace('/UserAdministration');
              }).fail(function(response){
                console.log(response);
                $("#error").text("Something went wrong! Try again.");
              });
            });
        

    </script>

</body>

</html>
